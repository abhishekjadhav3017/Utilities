@using Silicus.ProjectTracker.Core;
@using Silicus.ProjectTracker.Web.Models;
@model StatusList
@using Kendo.Mvc.UI;

@(Html.Kendo().DropDownListFor(m => m)
        .DataTextField("Text")
        .DataValueField("Value")
        .BindTo(Extensions.EnumToSelectList(typeof(StatusList)))
        .Events(e =>
        {
            e.Select("onSelectStatus");
        })
)