    <script>
        $(document).ready(function () {

            var validator = $("form").data("validator");
            if (validator) {
                validator.settings.onkeyup = false;
                validator.settings.onfocusout = function (element) {
                    $(element).valid();
                };
            }
        });

    </script>

</head>

@{
    var conname = @ViewContext.RouteData.Values["controller"].ToString().ToLower();
    var actname = @ViewContext.RouteData.Values["action"].ToString().ToLower();
}

<body>
    <div id="loading">
		<div>
			<div></div>
		    <div></div>
		    <div></div>
		</div>
	</div>
    <div id="wrapper" class="wrap">
         @if (actname != "login" && actname != "logoff" && actname != "forgotpassword")
        {
        <div id="top">
            <div class="overlay">
                @*<img class="loaderimg" src="~/Images/ajax-loader.gif" />*@
            </div>
			<div class="container">
				<div class="Leftnav-button">
					<i class="fa fa-bars"></i>
				</div>
				<div class="main-logo"></div>
				
				<div class="profile">
					<ul>
						<li class="user">
                            @*<img src="../../Content/Images/profile.png" class="profile-img">*@
							<a class="dropdown-toggle" data-toggle="dropdown" href="#" onclick="return false;">
								<img src="../../Content/Images/profile.png" class="profile-img">
								 <div class="user-info pt5">@Request.Cookies["userid"].Value<br>	
								@*<span class="user-email">johndoe@silicus.com</span>*@

								</div>
								<div class="arrow"><i class="fa fa-angle-down"></i></div>
							</a>
							@*<ul class="dropdown-menu pull-right">
								<li><a href="#"><i class="fa fa-user"></i> Edit Profile</a></li>
		                        <li><a href="#"><i class="fa fa-calendar"></i> My Calendar</a></li>
		                        <li><a href="@Url.Action("LogOff", "Account")"><i class="fa fa-sign-out"></i> Log Out</a></li>
							</ul>*@
							<ul class="dropdown-menu pull-right">
		                        <li><a href="@Url.Action("LogOff", "Account")"><i class="fa fa-sign-out"></i> Log Out</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div> <!-- /container -->
		</div> <!-- /top -->
         }
		<div id="main">
            @if (actname != "login" && actname != "logoff" && actname != "forgotpassword")
            {   
                @:<div class="container" id="main-container">

                <!-- Navigation Menu -->
                <div class="Leftnav"> <!-- added the class "show" to start with open menu -->
	                <ul>                       
                        @if (@Request.Cookies["adminMenuVisibility"].Value == "YES")
                        {
                          <li class="LeftnavTab active"><a href="#" class="admindashboardlink" onclick="return false;"><i class="fa fa-dashboard"></i> Dashboard</a></li>                          
                          <li class="LeftnavTab"><a href="#" class="projectlink"><i class="fa fa-list"></i> Projects</a></li>
                          <li class="LeftnavTab"><a href="#" class="mappinglink"><i class="fa fa-list"></i> Mapping</a></li>
                          <li class="LeftnavTab"><a href="#" class="statusByUserlink"><i class="fa fa-list"></i> Status by User</a></li>
                        }
                        else
                        {
                            <li class="LeftnavTab active"><a href="#" class="userdashboardlink" onclick="return false;"><i class="fa fa-dashboard"></i> Dashboard</a></li>                            
                            <li class="LeftnavTab"><a href="#" id ="projectSummarylink" class="projectSummarylink"><i class="fa fa-list"></i> Summary</a></li>
                            <li class="LeftnavTab"><a href="#" id ="uploadlink" class="uploadlink"><i class="fa fa-list"></i> Upload</a></li>
                        }                                              
                    </ul>

                    <div class="Leftnav-logo">
						Project Tracker
						<span>Silicus Technologies, LLC.</span>
                        @if (@DateTime.Now.Year != 2014)
                        {
                        <span>&copy; 2014 - @DateTime.Now.Year</span>}
                        else
                        {<span>&copy; 2014</span>}
					</div>
                </div>
                <!-- Navigation Menu -->
            }
                
                @RenderBody()
                
            @if (actname != "login" && actname != "logoff" && actname != "forgotpassword")
            {   
                @:</div>
            }
        </div>
    </div>    
    @RenderSection("scripts", required: false)

    @Scripts.Render("~/bundles/ProjectTracker")

</body>
</html>
@Scripts.Render("~/bundles/CommonJS")